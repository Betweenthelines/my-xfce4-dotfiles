<?xml version="1.0" encoding="UTF-8"?>

<!--
	GtkSourceview 3 scheme: Shades of pastel
	Author: WernerFP
	Web: https://github.com/WernerFP
	License: GPL3
-->

<style-scheme id="shades-of-pastel" _name="Shades of pastel" version="1.0">

	<author>WernerFP</author>
	<_description>Pastels on blackboard</_description>

<!-- ********************* -->
<!-- ** Global Settings ** -->
<!-- ********************* -->

	<style name="background-pattern"          background="#191919"/>
	<style name="bracket-match"               background="#714FA6" foreground="#FFFFFF"/>
	<style name="bracket-mismatch"            background="#C23B22" foreground="#FFFFFF" />
	<style name="current-line"                background="#232323"/>
	<style name="cursor"                      foreground="#D3D7CF"/>
	<style name="draw-spaces"                 foreground="#474747"/>
	<style name="line-numbers"                foreground="#727272" background="#101010"/>
	<style name="right-margin"                foreground="#929292" background="#191919"/>
	<style name="search-match"                foreground="#000000" background="#FFE792"/>
	<style name="secondary-cursor"            foreground="#D3D7CF"/>
	<style name="selection"                   foreground="#F5F5F5" background="#474747"/>
	<style name="text"                        foreground="#D3D7CF" background="#191919"/>

<!-- *************************** -->
<!-- ** Universal definitions ** -->
<!-- *************************** -->

	<style name="def:boolean"                 foreground="#DE5550" bold="true"/>
	<style name="def:builtin"                 foreground="#6BB88A" bold="true"/>
	<style name="def:character"               foreground="#B698E6"/>
	<style name="def:comment"                 foreground="#7F8182" italic="true"/>
	<style name="def:complex"                 foreground="#6BB88A"/>
	<style name="def:constant"                foreground="#D48645"/>
	<style name="def:decimal"                 foreground="#D48645"/>
	<style name="def:doc-comment-element"     italic="true"/>
	<style name="def:error"                   background="#C23B22" foreground="#F0F0F0" bold="true"/>
	<style name="def:floating-point"          foreground="#D48645"/>
	<style name="def:function"                foreground="#6BB88A"/>
	<style name="def:identifier"              foreground="#8ECC7E"/>
	<style name="def:keyword"                 foreground="#8BC7C4" bold="true"/>
	<style name="def:note"                    background="#F5EBC9" foreground="000000" bold="true"/>
	<style name="def:operator"                foreground="#DBDFD8"/>
	<style name="def:preprocessor"            foreground="#B698E6"/>
	<style name="def:shebang"                 foreground="#7F8182" bold="true"/>
	<style name="def:special-char"            foreground="#B698E6"/>
	<style name="def:special-constant"        foreground="#DE5550"/>
	<style name="def:statement"               foreground="#8ECC7E"/>
	<style name="def:string"                  foreground="#C7C283"/>
	<style name="def:type"                    foreground="#F54985"/>
	<style name="def:underlined"              underline="true"/>
	<style name="def:variable"                foreground="#7FA8D4" italic="true"/>
	<style name="def:warning"                 background="#C23B22" foreground="#F0F0F0" bold="true"/>

<!-- ******************************** -->
<!-- ** Language specific settings ** -->
<!-- ******************************** -->

<!-- ASP -->
	<style name="asp:constant"                foreground="#86CAD9"/>
	<style name="asp:object"                  foreground="#86CAD9"/>
	<style name="asp:function"                foreground="#B698E6"/>

<!-- C -->
	<style name="c:common-defines"            foreground="#65A1F0"/>
	<style name="c:operator"                  foreground="#65A1F0"/>
	<style name="c:printf"                    foreground="#B698E6"/>

<!-- C++ -->
	<style name="cpp:operator"                foreground="#93C7C4" bold="true"/>

<!-- CSS -->
	<style name="css:attribute-selector-name" foreground="#8ECC7E"/>
	<style name="css:color"                   foreground="#B698E6"/>
	<style name="css:function"                foreground="#B698E6"/>
	<style name="css:keyword"                 foreground="#65A1F0"/>
	<style name="css:property-name"           foreground="#86CAD9"/>
	<style name="css:pseudo-class"            foreground="#EBA7A7" italic="true"/>
	<style name="css:vendor-specific"         foreground="#65A1F0"/>

<!-- .desktop -->
	<style name="desktop:category-additional" foreground="#C7C283"/>
	<style name="desktop:boolean"             foreground="#DE5550" bold="true"/>
	<style name="desktop:category-main"       foreground="#93C7C4" bold="true"/>
	<style name="desktop:encoding"            foreground="#65A1F0"/>
	<style name="desktop:exec-parameter"      foreground="#B698E6"/>
	<style name="desktop:language"            foreground="#8ECC7E"/>

<!-- Diff -->
	<style name="diff:added-line"             foreground="#97CF88"/>
	<style name="diff:changed-line"           foreground="#B698E6"/>
	<style name="diff:removed-line"           foreground="#E07E7E"/>

<!-- Erlang -->
	<style name="erlang:builtin"              foreground="#6BB88A"/>
	<style name="erlang:compiler-directive"   foreground="#F54985" bold="true"/>
	<style name="erlang:keyword"              foreground="#65A1F0" bold="true"/>
	<style name="erlang:operator"             foreground="#F54985" bold="true"/>

<!-- Go -->
	<style name="go:keyword"                  foreground="#F54985"/>
	<style name="go:type"                     foreground="#86CAD9"/>

<!-- Groovy -->
	<style name="groovy:interpolated"         foreground="#6BB88A"/>
	<style name="groovy:operator"             foreground="#93C7C4" bold="true"/>

<!-- Java -->
	<style name="java:declaration"            foreground="#86CAD9"/>
	<style name="java:keyword"                foreground="#8ECC7E"/>
	<style name="java:scope-declaration"      foreground="#86CAD9"/>
	<style name="java:storage-class"          foreground="#86CAD9"/>

<!-- JavaScript -->
	<style name="js:constructors"             foreground="#6BB88A" bold="true"/>
	<style name="js:function"                 foreground="#65A1F0"/>
	<style name="js:keyword"                  foreground="#93C7C4" bold="true"/>

<!-- JSON -->
	<style name="json:keyname"                foreground="#86CAD9"/>

<!-- Latex -->
	<style name="latex:command"               foreground="#B698E6"/>
	<style name="latex:display-math"          foreground="#D69074"/>
	<style name="latex:inline-math"           foreground="#D69074"/>
	<style name="latex:math"                  foreground="#D69074"/>
	<style name="latex:math-boundary"         foreground="#C7C283" bold="true"/>
<!-- Latex heading-->
	<style name="latex:part"                  scale="3.0" foreground="#6BB88A"/>
	<style name="latex:chapter"               scale="2.0" foreground="#6BB88A"/>
	<style name="latex:section"               scale="1.8" foreground="#6BB88A"/>
	<style name="latex:subsection"            scale="1.6" foreground="#6BB88A"/>
	<style name="latex:subsubsection"         scale="1.4" foreground="#6BB88A"/>
	<style name="latex:paragraph"             scale="1.2" foreground="#6BB88A"/>
	<style name="latex:subparagraph"          scale="1.0" foreground="#6BB88A"/>

<!-- Lua -->
	<style name="lua:function"                foreground="#B698E6" bold="true"/>
	<style name="lua:keyword"                 foreground="#93C7C4" bold="true"/>

<!-- Makefile -->
	<style name="makefile:assignment-lhs"     foreground="#7CA6D6" italic="true"/>
	<style name="makefile:assignment-rhs"     foreground="#C7C283"/>
	<style name="makefile:variable"           foreground="#FA9F7B"/>

<!-- Markdown -->
	<style name="markdown:attribute-value"    foreground="#C7C283"/>
	<style name="markdown:backslash-escape"   foreground="#65A1F0" bold="true"/>
	<style name="markdown:blockquote-marker"  foreground="#EBA7A7"/>
	<style name="markdown:code"               foreground="#7FA8D4"/>
	<style name="markdown:emphasis"           foreground="#B698E6" italic="true"/>
	<style name="markdown:header"             foreground="#E06767"/>
	<style name="markdown:horizontal-rule"    foreground="#70B1E0" background="#2F3436"/>
	<style name="markdown:image-marker"       foreground="#86CAD9" bold="true"/>
	<style name="markdown:label"              foreground="#B698E6"/>
	<style name="markdown:link-text"          foreground="#B698E6"/>
	<style name="markdown:list-marker"        foreground="#86CAD9"/>
	<style name="markdown:strong-emphasis"    foreground="#B698E6" bold="true"/>
	<style name="markdown:url"                foreground="#6BB88A"/>

<!-- Mediawiki -->
	<style name="mediawiki:light-emphasis"    foreground="#B698E6" italic="true"/>
	<style name="mediawiki:line"              background="#2F3436" foreground="#86CAD9" bold="true"/>
	<style name="mediawiki:link"              foreground="#6BB88A"/>
	<style name="mediawiki:link-symbol"       foreground="#D17C36" bold="true"/>
	<style name="mediawiki:list"              foreground="#86CAD9" bold="true"/>
	<style name="mediawiki:magic-word"        foreground="#8ECC7E"/>
	<style name="mediawiki:signature"         background="#2F3436" foreground="#B698E6" bold="true"/>
	<style name="mediawiki:strong-emphasis"   foreground="#B698E6" bold="true"/>
	<style name="mediawiki:table-symbol"      foreground="#86CAD9" bold="true"/>
	<style name="mediawiki:template"          foreground="#FA9F7B"/>
	<style name="mediawiki:title"             foreground="#E06767"/>
	<style name="mediawiki:url"               foreground="#6BB88A"/>

<!-- Objective-C -->
	<style name="objc:keyword"                foreground="#8ECC7E"/>

<!-- Perl -->
	<style name="perl:builtin"                foreground="#B698E6"/>
	<style name="perl:include-statement"      foreground="#F54985"/>
	<style name="perl:operator"               foreground="#FA9F7B" italic="true"/>
	<style name="perl:variable"               foreground="#7FA8D4" italic="true"/>

<!-- PHP -->
	<style name="php:keyword"                 foreground="#F54985"/>
	<style name="php:variable"                foreground="#7FA8D4" italic="true"/>
	<style name="php:variable-definition"     foreground="#7FA8D4" italic="true"/>

<!-- Python -->
	<!-- BUG: multiline comments (""") are not detected in gtksourceview -->
	<style name="python:keyword"              foreground="#F54985" bold="true"/>
	<style name="python:special-variable"     foreground="#7FA8D4" italic="true"/>

<!-- R -->
	<style name="r:functions"                 foreground="#B698E6"/>

<!-- reStructuredText -->
	<style name="rst:bullet"                  foreground="#86CAD9"/>
	<style name="rst:code"                    foreground="#7FA8D4"/>
	<style name="rst:directive"               foreground="#C7C283"/>
	<style name="rst:header"                  foreground="#E06767"/>
	<style name="rst:strong-emphasis"         foreground="#B698E6" bold="true"/>

<!-- Ruby -->
	<style name="ruby:builtin"                foreground="#F54985"/>
	<style name="ruby:constant"               foreground="#6BB88A"/>
	<style name="ruby:keyword"                foreground="#86CAD9" bold="true"/>
	<style name="ruby:predefined-variable"    foreground="#7CA6D6"/>
	<style name="ruby:special-variable"       foreground="#7CA6D6" italic="true"/>
	<style name="ruby:symbol"                 foreground="#B698E6"/>
	<style name="ruby:variable"               foreground="#7CA6D6" italic="true"/>

<!-- Rust -->
	<style name="rust:keyword"                foreground="#86CAD9" bold="true"/>

<!-- Scala -->
	<style name="scala:type"                  foreground="#86CAD9"/>
	<style name="scala:xmltag"                foreground="#7FA8D4"/>

<!-- Shellscript -->
	<style name="sh:common-command"           foreground="#B698E6"/>
	<style name="sh:function"                 foreground="#6BB88A"/>
	<style name="sh:here-doc-bound"           foreground="#DBDFD8" bold="true"/>
	<style name="sh:keyword"                  foreground="#93C7C4" bold="true"/>
	<style name="sh:others"                   foreground="#FA9F7B"/>
	<style name="sh:variable"                 foreground="#7FA8D4" italic="true"/>
	<style name="sh:variable-definition"      foreground="#7FA8D4" italic="true"/>

<!-- XML -->
	<style name="xml:attribute-name"          foreground="#8ECC7E"/>
	<style name="xml:attribute-value"         foreground="#C7C283"/>
	<style name="xml:element-name"            foreground="#7FA8D4"/>
	<style name="xml:entity"                  foreground="#FA9F7B"/>
	<style name="xml:namespace"               foreground="#7FA8D4" bold="true"/>

<!-- YAML -->
	<style name="yaml:map-key"                foreground="#7FA8D4"/>

</style-scheme>
